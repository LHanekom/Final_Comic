
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="authoring-tool" content="Adobe_Animate_CC">
    <title>Lightbringer</title>
    <link rel="stylesheet" href="styles.css">
    <script src="https://code.createjs.com/1.0.0/createjs.min.js"></script>
    <script src="animate_cc_html5_canvas.min.js"></script> <!-- Ensure this path is correct -->
    <script src="script.js"></script>
    <script src="Infographic.js"></script>
    <script src="author.js"></script>
    <script>
        // Global variables for infographic
        var infographic_canvas, infographic_stage, infographic_exportRoot, infographic_container, infographic_dom_overlay_container, infographic_fnStartAnimation;
        // Global variables for author
        var author_canvas, author_stage, author_exportRoot, author_container, author_dom_overlay_container, author_fnStartAnimation;

        // Combined init function
        function init() {
            initInfographic();
            initAuthor();
        }

        // Initialize infographic animation
        function initInfographic() {
			infographic_canvas = document.getElementById("infographic_canvas");
			infographic_container = document.getElementById("infographic_container");
			infographic_dom_overlay_container = document.getElementById("infographic_dom_overlay_container");
			var comp = AdobeAn.getComposition("B92E27B477D77544AE8C619020814858");
			var lib = comp.getLibrary();
			infographic_canvas.width = lib.properties.width;
			infographic_canvas.height = lib.properties.height;
			var loader = new createjs.LoadQueue(false);
			loader.addEventListener("fileload", function(evt) { handleFileLoad(evt, comp, 'infographic'); });
			loader.addEventListener("complete", function(evt) { handleComplete(evt, comp, 'infographic'); });
			loader.loadManifest(lib.properties.manifest);
		}

        // Initialize author animation
        function initAuthor() {
            author_canvas = document.getElementById("author_canvas");
            author_container = document.getElementById("author_container");
            author_dom_overlay_container = document.getElementById("author_dom_overlay_container");
            var comp = AdobeAn.getComposition("8E91B772C861D645A49460D207899497");
            var lib = comp.getLibrary();
            var loader = new createjs.LoadQueue(false);
            loader.addEventListener("fileload", function(evt) { handleFileLoad(evt, comp, 'author'); });
            loader.addEventListener("complete", function(evt) { handleComplete(evt, comp, 'author'); });
            loader.loadManifest(lib.properties.manifest);
        }

        // Shared file load handler
        function handleFileLoad(evt, comp, type) {
            var images = comp.getImages();
            if (evt && evt.item.type === "image") {
                images[evt.item.id] = evt.result;
            }
        }

        // Shared complete handler
        function handleComplete(evt, comp, type) {
            var lib = comp.getLibrary();
            var ss = comp.getSpriteSheet();
            var queue = evt.target;
            var ssMetadata = lib.ssMetadata;
            for (var i = 0; i < ssMetadata.length; i++) {
                ss[ssMetadata[i].name] = new createjs.SpriteSheet({
                    "images": [queue.getResult(ssMetadata[i].name)],
                    "frames": ssMetadata[i].frames
                });
            }

            if (type === 'infographic') {
                infographic_exportRoot = new lib.Infographic();
                infographic_stage = new lib.Stage(infographic_canvas);
                infographic_stage.enableMouseOver();
                infographic_fnStartAnimation = function() {
                    infographic_stage.addChild(infographic_exportRoot);
                    createjs.Ticker.framerate = lib.properties.fps;
                    createjs.Ticker.addEventListener("tick", infographic_stage);
                };
                AdobeAn.makeResponsive(true, 'both', false, 1, [infographic_canvas, infographic_container, infographic_dom_overlay_container]);
                AdobeAn.compositionLoaded(lib.properties.id);
                infographic_fnStartAnimation();
            } else if (type === 'author') {
                author_exportRoot = new lib.author();
                author_stage = new lib.Stage(author_canvas);
                author_stage.enableMouseOver();
                author_fnStartAnimation = function() {
                    author_stage.addChild(author_exportRoot);
                    createjs.Ticker.framerate = lib.properties.fps;
                    createjs.Ticker.addEventListener("tick", author_stage);
                };
                AdobeAn.makeResponsive(true, 'both', false, 1, [author_canvas, author_container, author_dom_overlay_container]);
                AdobeAn.compositionLoaded(lib.properties.id);
                author_fnStartAnimation();
            }

            // Check if both animations are loaded before hiding loader
            if (infographic_stage && author_stage) {
                const loader = document.querySelector('.loader');
                const mainContent = document.querySelector('.main-content');
                loader.classList.add('hidden');
                loader.addEventListener('transitionend', () => {
                    loader.style.display = 'none';
                    mainContent.classList.add('visible');
                    document.body.style.overflow = 'auto';
                }, { once: true });
            }
        }
    </script>
</head>
<body onload="init();">
		<div class="loader">
			<img id="load_icon" src="images/load.png" alt="Loading...">
		</div>

		<div class="main-content">
			
